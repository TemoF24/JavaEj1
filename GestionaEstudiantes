import java.util.ArrayList;
import java.util.Scanner;

class Estudiante {
    String nombre;
    double nota1, nota2, nota3;

    public Estudiante(String nombre, double nota1, double nota2, double nota3) {
        this.nombre = nombre;
        this.nota1 = nota1;
        this.nota2 = nota2;
        this.nota3 = nota3;
    }

    public double calcularMedia() {
        return (nota1 + nota2 + nota3) / 3;
    }

    public void mostrarInfo() {
        System.out.println("ðŸ“Œ Estudiante: " + nombre);
        System.out.println("ðŸ“Š Nota media: " + String.format("%.2f", calcularMedia()));
        System.out.println("----------------------");
    }
}

public class GestionaEstudiantes {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        ArrayList<Estudiante> estudiantes = new ArrayList<>();

        System.out.println("ðŸŽ“ GestiÃ³n de Estudiantes");
        while (true) {
            System.out.print("Ingrese el nombre del estudiante (o 'salir' para terminar): ");
            String nombre = scanner.nextLine();
            if (nombre.equalsIgnoreCase("salir")) break;

            System.out.print("Ingrese la primera nota: ");
            double nota1 = scanner.nextDouble();
            System.out.print("Ingrese la segunda nota: ");
            double nota2 = scanner.nextDouble();
            System.out.print("Ingrese la tercera nota: ");
            double nota3 = scanner.nextDouble();
            scanner.nextLine(); // Limpiar buffer

            estudiantes.add(new Estudiante(nombre, nota1, nota2, nota3));
        }

        System.out.println("\nðŸ“‹ **Lista de Estudiantes y Notas**");
        for (Estudiante estudiante : estudiantes) {
            estudiante.mostrarInfo();
        }

        scanner.close();
    }
}
